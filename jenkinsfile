pipeline {
  agent any
  tools {
    nodejs 'node16.18.0'
  }
  stages {

      stage('Enter the directory') {
        steps {
          script {
            sh 'cd /home/ubuntu/repos/web-server-teste'
          }
        }
      }
    
      stage('GIT PULL') {
        steps {
          script {
            sh 'git checkout main'
          }
          script {
            sh 'git pull'
          }
        }
      }

      stage('PM2 START') {
        steps {
          script {
            sh 'npm install'
          }
          script {
            sh 'pm2 start /home/ubuntu/repos/web-server-teste/index.js'
          }

          script {
            sh 'pm2 log'
          }

        }
      }

      stage('Deploy') {
        steps {
          echo 'Deploying...'
        }
      }
    }

}