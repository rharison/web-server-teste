pipeline {
  agent any

  stages {

    stage('GIT PULL') {
      steps {
        script {
          sh 'git config --global --add safe.directory /home/ubuntu/repos/web-server-teste'
        }
        script {
          sh 'cd /home/ubuntu/repos/web-server-teste && git pull'
        }
      }
    }
    stage('PM2 ADD') {
      steps {
        script {
          sh 'cd /home/ubuntu/repos/web-server-teste && npm start'
        }
      }
    }
    stage('Deploy') {
      steps {
        echo 'Deploying...'
      }
    }
  }
}