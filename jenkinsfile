pipeline {
  agent any
 
  stages {
      stage('GIT PULL') {
        steps {
          script {
            sh 'cd /home/ubuntu/repos/web-server-teste && git pull'
          }
        }
      }

      stage('PM2 START') {
        steps {
          script {
            sh 'cd /home/ubuntu/repos/web-server-teste && npm install'
          }
          script {
            sh 'node index.js'
          }

        }
      }

      stage('Deploy') {
        steps {
          echo 'Deploying...'
        }
      }
    }

}